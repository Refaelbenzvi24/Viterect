{
  "name": "vite-react-boilerplate",
  "version": "1.0.0",
  "description": "vite react tailwind electron boilerplate",
  "main": "./dist/main.tsx",
  "author": "Refael Ben Zvi",
  "license": "MIT",
  "scripts": {
    "build": "run-p build:vite build:electron",
    "build:vite": "cross-env NODE_ENV=production tsc && vite build",
    "build:electron": "cross-env NODE_ENV=production tsc -p electron",
    "build:electron:dev": "cross-env NODE_ENV=development tsc -p electron",
    "build:pwa": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true vite build",
    "run-build": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true vite build",
    "run-build-reloadsw": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true RELOAD_SW=true vite build",
    "run-build-claims": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true CLAIMS=true vite build",
    "run-build-reloadsw-claims": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true CLAIMS=true RELOAD_SW=true vite build",
    "run-build-sw": "rimraf dist && cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true SW=true vite build",
    "run-build-sw-reloadsw": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true RELOAD_SW=true SW=true vite build",
    "run-build-sw-claims": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true CLAIMS=true SW=true vite build",
    "run-build-sw-reloadsw-claims": "cross-env DEBUG=vite-plugin-pwa:* BASE_URL=/ SOURCE_MAP=true CLAIMS=true RELOAD_SW=true SW=true vite build",
    "dist": "run-p build electron-builder",
    "pack": "run-p build electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "commit": "cz",
    "dev": "vite",
    "dev:open": "vite --open",
    "dev:serve": "vite serve",
    "dev:host": "vite --host",
    "dev:pwa": "cross-env DEBUG=vite-plugin-pwa:* vite",
    "dev:electron": "run-p build:electron:dev electron .",
    "dev:electron:vite": "run-p dev dev:electron",
    "extract-translations": "i18next --fail-on-warnings",
    "prepare": "husky install",
    "serve": "serve dist",
    "serve:test": "start-server-and-test serve http://localhost:5000",
    "start": "pnpm run-build & serve",
    "start-reloadsw": "run-p run-build-reloadsw serve",
    "start-claims": "run-p run-build-claims serve",
    "start-claims-reloadsw": "run-p run-build-reloadsw-claims  serve",
    "start-sw": "run-p run-build-sw serve",
    "start-sw-reloadsw": "run-p run-build-sw-reloadsw serve",
    "start-sw-claims": "run-p run-build-sw-claims serve",
    "start-sw-claims-reloadsw": "run-p run-build-sw-reloadsw-claims serve",
    "start:electron": "electron .",
    "lint": "run-p lint:tsc lint:eslint lint:style",
    "lint:style": "stylelint --cache --fix --ignore-path .gitignore '**/*.css'",
    "lint:eslint": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx src",
    "lint:eslint:fix": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx src --fix",
    "lint:tsc": "tsc",
    "format": "prettier -uw --ignore-path .gitignore .",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:e2e": "pnpm serve:test 'cypress open'",
    "test:e2e:headless": "pnpm serve:test 'cypress run'",
    "test:e2e:ci": "vite build && pnpm serve:test 'cypress run --record'",
    "preview-https": "serve dist",
    "preview": "vite preview",
    "validate": "run-p lint test:ci test:e2e:headless"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@headlessui/react": "^1.4.2",
    "@ionic/react": "^6.0.1",
    "@ionic/react-router": "^6.0.1",
    "@mui/material": "^5.2.6",
    "@mui/styles": "^5.2.3",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@xstate/react": "^1.6.3",
    "axios": "^0.24.0",
    "chart.js": "^3.7.0",
    "formik": "^2.2.9",
    "html-react-parser": "^1.4.4",
    "i18next": "^21.6.3",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-http-backend": "^1.3.1",
    "immer": "^9.0.7",
    "jss": "^10.9.0",
    "jss-rtl": "^0.3.0",
    "lodash": "^4.17.21",
    "millify": "^4.0.0",
    "moment": "^2.29.1",
    "nprogress": "^0.2.0",
    "prism-theme-vars": "^0.2.2",
    "react": "^17.0.2",
    "react-chartjs-2": "^4.0.0",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.1",
    "react-number-format": "^4.9.1",
    "react-query": "^3.34.6",
    "react-router": "^5.0.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.0.1",
    "recoil": "^0.5.2",
    "xstate": "^4.26.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@cypress/code-coverage": "^3.9.12",
    "@dblechoc/plugin-lit-refresh": "^0.0.6",
    "@iconify/json": "^1.1.447",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@nabla/vite-plugin-eslint": "^1.3.5",
    "@rollup/plugin-replace": "^3.0.1",
    "@svgr/core": "^5.5.0",
    "@tailwindcss/postcss7-compat": "2.1.4",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-config": "^5.0.4",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-react": "^1.1.3",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.4.5",
    "commitizen": "^4.2.4",
    "critters": "^0.0.15",
    "cross-env": "^7.0.3",
    "cypress": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-prefer-function-component": "^0.0.7",
    "eslint-plugin-testing-library": "^5.0.1",
    "eslint-plugin-unicorn": "^39.0.0",
    "https-localhost": "^4.7.0",
    "husky": "^7.0.4",
    "i18next-parser": "^5.3.0",
    "jest": "^27.4.5",
    "jest-watch-typeahead": "^1.0.0",
    "markdown-it-link-attributes": "^4.0.0",
    "markdown-it-prism": "^2.2.1",
    "msw": "^0.36.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.1.4",
    "typescript": "^4.4.4",
    "unplugin-auto-import": "^0.5.4",
    "unplugin-icons": "^0.12.23",
    "vite": "2.7.6",
    "vite-pages-theme-doc": "^3.1.0",
    "vite-plugin-inspect": "^0.3.11",
    "vite-plugin-mdx": "^3.5.10",
    "vite-plugin-pages": "^0.18.2",
    "vite-plugin-pwa": "^0.11.12",
    "vite-plugin-windicss": "^1.6.1",
    "vite-tsconfig-paths": "^3.3.17",
    "vitest": "^0.0.118",
    "workbox-core": "^6.4.2",
    "workbox-precaching": "^6.4.2",
    "workbox-routing": "^6.4.2",
    "workbox-window": "^6.4.2"
  },
  "browserslist": {
    "production": "Edge >= 18, Firefox >= 60, Chrome >= 61, Safari >= 11, Opera >= 48",
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*": "prettier -uw",
    "*.css": "stylelint --cache --fix",
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "jest --findRelatedTests --coverage=false"
    ]
  },
  "nyc": {
    "report-dir": "coverage/cypress",
    "reporter": [
      "lcov"
    ]
  }
}
