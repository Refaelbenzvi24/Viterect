{
	"name": "viterect",
	"version": "1.0.0",
	"description": "vite react windicss boilerplate",
	"main": "./dist/main.tsx",
	"author": "Refael Ben Zvi",
	"license": "MIT",
	"scripts": {
		"start": "pnpm run build & pnpm run serve",
		"start:test": "pnpm run build:test & pnpm run serve:test",
		"build": "cross-env NODE_ENV=production SOURCE_MAP=true CLAIMS=true SW=true vite build",
		"build:test": "cross-env NODE_ENV=production SOURCE_MAP=true CLAIMS=true SW=true RELOAD_SW=false vite build --mode test",
		"serve": "serve dist",
		"serve:test": "serve tests/dist -p 8080",
		"clean": "rimraf dist main src/out",
		"commit": "cz",
		"dev": "cross-env NODE_ENV=development vite",
		"dev:test": "cross-env NODE_ENV=test vite --mode test",
		"extract-translations": "i18next --fail-on-warnings",
		"prepare:husky": "husky install",
		"lint": "pnpm lint:tsc && pnpm lint:eslint && pnpm lint:style",
		"lint:eslint": "eslint --cache --ignore-path .gitignore --ext .ts,.tsx src",
		"lint:tsc": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:watch-all": "jest --watch-all",
		"test:ci": "jest --ci",
		"test:e2e": "cypress open",
		"test:e2e:headless": "cypress run",
		"test:e2e:ci": "vite build --mode test && start-server-and-test serve:test http://localhost:8080 'cypress run --record'",
		"coverage:jest": "start ./coverage/jest/lcov-report/index.html",
		"coverage:cypress": "start ./coverage/cypress/lcov-report/index.html",
		"validate": "pnpm lint && pnpm test:ci && pnpm test:e2e:headless"
	},
